<Page x:Class="WpfApp1.src.vues.Home"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp1.src.vues"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1080"
      Title="Home">

    <Grid>
        <Grid Margin="408,271,408,65">

            <Button Content="[create]" Name="create" HorizontalAlignment="Center" Margin="0,64,0,0" VerticalAlignment="Top" Height="47" Width="198" Click="Button_Click"/>
            <Button Content="[launch]" Name="launch" HorizontalAlignment="Center" Margin="0,173,0,0" VerticalAlignment="Top" Height="47" Width="198" Click="launch_Click"/>
            <Button Content="[edit]" Name="edit" HorizontalAlignment="Center" Margin="0,285,0,0" VerticalAlignment="Top" Height="47" Width="198" Click="edit_Click"/>

        </Grid>
        <Button Content="[settings]" Name="settings" HorizontalAlignment="Left" Margin="10,615,0,0" VerticalAlignment="Top" Height="70" Width="70
                " Click="settings_Click"/>
        <Image x:Name="picture_home" HorizontalAlignment="Center" Height="171" Margin="0,62,0,0" VerticalAlignment="Top" Width="472" Source="/src/vues/logo.png" RenderTransformOrigin="0.5,0.5" Stretch="UniformToFill"/>
    </Grid>
</Page>
